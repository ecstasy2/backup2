{
  "name": "tools",
  "version": "0.0.0",
  "description": "Shovel incomming readings from one Broker and simulate an incomming reading in another",
  "main": "app.js",
  "scripts": {
    "start": "node forward-readings.js"
  },
  "author": "",
  "license": "BSD-2-Clause",
  "dependencies": {
    "archiver": "^0.16.0",
    "async-eventemitter": "^0.2.2",
    "aws-sdk": "^2.2.13",
    "bunyan": "^1.4.0",
    "bunyan-logstash-tcp": "^0.3.4",
    "config": "^1.16.0",
    "dateformat": "^1.0.11",
    "eslint": "^1.7.3",
    "glob": "^5.0.15",
    "js-yaml": "^3.4.3",
    "lodash": "^3.10.1",
    "node-uuid": "^1.4.3",
    "shelljs": "^0.5.3",
    "slack-notify": "^0.1.4",
    "vasync": "~1.6.3",
    "verror": "^1.6.0"
  },
  "eslintConfig": {
    "globals": {
      "it": false,
      "describe": false
    },
    "rules": {
      "strict": [
        2,
        "global"
      ],
      "no-underscore-dangle": 0,
      "block-scoped-var": 2,
      "camelcase": 1,
      "curly": 2,
      "eol-last": 2,
      "eqeqeq": [
        2,
        "smart"
      ],
      "max-depth": [
        1,
        3
      ],
      "max-statements": [
        1,
        15
      ],
      "new-cap": 1,
      "no-extend-native": 2,
      "no-mixed-spaces-and-tabs": 2,
      "no-trailing-spaces": 2,
      "no-use-before-define": [
        2,
        "nofunc"
      ],
      "no-unused-vars": 1,
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "semi": [
        2,
        "always"
      ],
      "space-after-keywords": [
        2,
        "always"
      ],
      "array-bracket-spacing": [
        2,
        "never"
      ],
      "object-curly-spacing": [
        2,
        "never"
      ],
      "space-unary-ops": 2,
      "no-undef": 2,
      "callback-return": 2
    },
    "env": {
      "node": true
    }
  }
}
